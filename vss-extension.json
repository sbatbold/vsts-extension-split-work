{
    "manifestVersion": 1,
    "id": "vsts-extension-split-work",
    "version": "0.1.0",
    "name": "vsts-extension-split-work",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Split a work item to track work that will continue into the next sprint.",
    "publisher": "blueprint-team",
    "public": false,
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Split" "Agile" "Sprint"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "links": {
        "support": {
            "uri": "https://bit.ly"
        },
        "repository": {
            "uri": "https://bit.ly"
        },
        "issues": {
            "uri": "https://bit.ly"
        }
    },
    "branding": {
        "color": "#2973D9",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        }, 
        {
            "path": "css",
            "addressable": true
        },
        {
            "path": "dialog.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "vsts-extension-split-work-action",
            "type": "ms.vss-web.action-provider",
            "description": "",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "group": "contributed",
                "uri": "index.html"
            }
        },
         {
            "id": "split-work-dialog",
            "type": "ms.vss-web.control",
            "targets": [],
            "properties": {
                "uri": "dialog.html?id={{id}}"
            }
        }
    ]
}
